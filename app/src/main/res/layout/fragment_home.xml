<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/hamburger_ic"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@drawable/hamburger_ic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"/>

    <ImageView
        android:id="@+id/notification_ic"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@drawable/notification_ic"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hamburger_ic"
        android:layout_alignParentStart="true"
        android:text="Hello Riyanda"
        android:paddingStart="25dp"
        android:paddingTop="25dp"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/askinguser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/greetings"
        android:layout_alignParentStart="true"
        android:text="What do you wanna learn today?"
        android:paddingStart="25dp"
        android:paddingTop="5dp"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/homecard"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@id/askinguser"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/softblue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/card_desc"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="Enhance your skills and leverage."
                android:textSize="18dp"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_desc"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Learn Now"
                android:textSize="12sp"
                android:textColor="@color/white"

                android:background="@drawable/smooth_corner"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:src="@drawable/char_card"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/your_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homecard"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Your Courses"
        android:textSize="18sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/see_all_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homecard"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:text="See All"
        android:textSize="18sp">
    </TextView>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/firstCard"
        android:layout_width="155dp"
        android:layout_height="125dp"
        android:layout_below="@id/your_course"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/softyellow">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Artificial Intelligence"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:paddingBottom="20dp"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:src="@drawable/ai_ic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/secondCard"
        android:layout_width="155dp"
        android:layout_height="125dp"
        android:layout_below="@id/your_course"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/softblue">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Computer Graphics"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:paddingBottom="20dp"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:src="@drawable/computergraphics_ic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/thirdCard"
        android:layout_width="155dp"
        android:layout_height="125dp"
        android:layout_below="@id/firstCard"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/softgreen">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Research Method"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:paddingBottom="20dp"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:src="@drawable/researchmethod_ic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fourthCard"
        android:layout_width="155dp"
        android:layout_height="125dp"
        android:layout_below="@id/secondCard"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/softpink">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Software Project"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:paddingBottom="20dp"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:src="@drawable/sp_ic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>